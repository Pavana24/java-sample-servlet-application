<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="2.5"
>
    <display-name>MVCDemo</display-name>

    <!-- Home -->
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.fred.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- User Login -->
    <servlet>
        <servlet-name>UserLoginController</servlet-name>
        <servlet-class>com.fred.controller.UserLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- User Logout -->
    <servlet>
        <servlet-name>UserLogoutController</servlet-name>
        <servlet-class>com.fred.controller.UserLogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- User page -->
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.fred.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

</web-app>